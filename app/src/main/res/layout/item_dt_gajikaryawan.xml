<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kartukuGajiKry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    card_view:cardBackgroundColor="@color/birumd"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp"
    android:outlineAmbientShadowColor="@color/birumd1"
    android:outlineSpotShadowColor="@color/biru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTglGaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="@color/biru"/>

        <TextView
            android:id="@+id/textNikGaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-12dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="@color/biru"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>